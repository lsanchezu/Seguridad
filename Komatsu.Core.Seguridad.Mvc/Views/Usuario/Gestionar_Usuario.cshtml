@model Komatsu.Core.Seguridad.Mvc.Models.ViewModel.UsuarioViewModel
@using Komatsu.Core.Seguridad.DataContracts;

<div class="contentTop">
    <span class="pageTitle"><span class="icon-screen"></span>Gestionar Usuario</span>
    <div class="clear">
    </div>
</div>
<div class="form">
    <fieldset>
        <div class="wrapper">
            <div class="widget fluid">
                <div class="whead">
                    <h6>Datos Generales</h6>
                    <div class="clear">
                    </div>
                </div>
                <div class="formRow fluid">
                    <div class="grid6">
                        <div class="grid3">
                            <label> Usuario :</label>
                        </div>
                        <div class="grid9">
                            <input type="text" />
                            <br class="clear" />   
                        </div>
                    </div>
                    <div class="grid6">
                        <div class="grid3">
                            <label> Nombre :</label>
                        </div>
                        <div class="grid9">
                            <input type="text" />
                            <br class="clear" />
                        </div>
                    </div>
                    <div class="clear"></div>
                </div>
                <div class="formRow fluid">
                    <div class="grid6">
                        <div class="grid3">
                            <label> Email :</label>
                        </div>
                        <div class="grid9">
                            <input type="text" />
                            <br class="clear" />
                        </div>
                    </div>
                    <div class="grid6">
                        <div class="grid3">
                            <label> Tipo Usuario :</label>
                        </div>
                        <div class="grid9">
                            @Html.DropDownListFor(m => m.UsuarioTipo.IdUsuarioTipo,
                            new SelectList(new ListaUsuarioTipo(), "IdUsuarioTipo", "Descripcion"), "- TODOS -", new
                            {
                                @class = "selector",
                                id = "IdUsuarioTipo"
                            })
                            <br class="clear" />
                        </div>
                    </div>
                    <div class="clear"></div>
                </div>
                <div class="formRow noBorderB">
                    <div id="status2" class="status"></div>
                    <div class="formSubmit">
                        <input type="button" name="CancelarGestionarUsuario" value="Cancelar" id="btnCancelarGestionarUsuario" class="buttonS bBlue formSubmit group_button" accesskey="C" title="C"/>
                        <input type="button" name="GuardarGestionarUsuario" value="Guardar" id="btnGuardarGestionarUsuario" class="buttonS bBlue formSubmit group_button" accesskey="C" title="C"/>
                        <div class="clear"></div>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        </div>
    </fieldset>
</div>
